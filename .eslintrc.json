{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "airbnb/base",
    "plugin:meteor/recommended",
    "standard",
    "standard-react"
  ],
  "envs": {
    "meteor": true
  },
  "plugins": [
    "import",
    "meteor"
  ],
  "rules": {
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-indent": 0
  },
  "settings": {
    "import/resolver": "meteor"
  }
}
